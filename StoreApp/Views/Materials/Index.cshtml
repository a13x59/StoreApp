@model IEnumerable<StoreApp.Models.Material>

@{
    ViewBag.Title = "Материалы";
}

<h2>Материалы</h2>

<p>
    @Html.ActionLink("Добавить новый материал", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Наименование материала
        </th>
        <th>
            Количество на складе
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.count)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.material_id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.material_id })
        </td>
    </tr>
}

</table>
