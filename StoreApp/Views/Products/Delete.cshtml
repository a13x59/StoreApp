@model StoreApp.Models.Product

@{
    ViewBag.Title = "Delete";
}

<h2>Удаление изделия</h2>

<h3>Вы уверены, что хотите удалить указанный изделие?</h3>
<div>

    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.name)*@
            Наименование
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Ввернуться к списку изделией", "Index")
        </div>
    }
</div>
