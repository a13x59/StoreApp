@model StoreApp.Models.ProductsDetail

@{
    ViewBag.Title = "Редактирование детали";
}

<h2>Редактирование детали</h2>

<div>
    @Html.ActionLink("Вернуться к редактированию продукта", "Edit", new { id = @ViewBag.product.id })
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.product_id)
        @Html.HiddenFor(model => model.detail_id)

        <div class="form-group">
            <label class="control-label col-md-2">Продукт</label>
            <div class="col-md-10">
                <label>@ViewBag.product.name</label>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Деталь</label>
            <div class="col-md-10">
                <label >@ViewBag.detail.name</label>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Количество</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.count, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.count, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
