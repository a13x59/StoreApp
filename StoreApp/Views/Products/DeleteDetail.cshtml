@model StoreApp.Models.ProductsDetail

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<div>
    @Html.ActionLink("Вернуться к редактированию продукта", "Edit", new { id = @Model.Product.id})
</div>

<h3>Вы уверены что хотиту удалить указанную деталь из издения?</h3>
<div>
    <hr />

    <div>
        <span>Удаление детали <b>@Html.DisplayFor(model => model.Detail.name)</b> из изделия <b>@Html.DisplayFor(model => model.Product.name)</b></span>
    </div>
    <div>
        <span>Количество деталей - <b>@Html.DisplayFor(model => model.count)</b></span>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
